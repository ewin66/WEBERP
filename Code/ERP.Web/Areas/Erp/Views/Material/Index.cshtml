@{
    ViewBag.Title = "物料管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Areas/Erp/ViewModels/erp.material.js"></script>
    <script type="text/javascript">
           using('validatebox');
           var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
            ko.bindingViewModel(new viewModel());
    </script>
}

<div id="container">
    <div id="wrapper">
        <div id="content">
            <div class="z-toolbar">
                <a id="a_refresh" href="#" plain="true" class="easyui-linkbutton" icon="icon-arrow_refresh" title="刷新" data-bind="click:refreshClick">刷新</a>
                <a id="a_add" href="#" plain="true" class="easyui-linkbutton" icon="icon-add" title="新增" data-bind="click:addClick">新增</a>
                <a id="a_edit" href="#" plain="true" class="easyui-linkbutton" icon="icon-edit" data-bind="click:editClick" title="编辑">编辑</a>
                <a id="a_del" href="#" plain="true" class="easyui-linkbutton" icon="icon-cross" title="删除" data-bind="click:deleteClick">删除</a>
                <a id="a_save" href="#" plain="true" class="easyui-linkbutton" icon="icon-save" data-bind="click:saveClick" title="保存">保存</a>
            </div>

            <table id="gridlist" data-bind="datagrid:grid">
                <thead>
                    <tr>
                        <th field="no" sortable="true" align="center" width="80" editor="text">物料编号</th>
                        <th field="name" sortable="true" align="center" width="180" editor="text">物料名称</th>
                        <th field="type" sortable="true" align="center" width="80" editor="{type:'combobox',options:{}}">物料类型</th>
                        <th field="price" sortable="true" align="center" width="80" editor="text" formatter="com.formatMoney">采购单价</th>
                        <th field="isenable" sortable="true" align="center" width="80" editor="text" formatter="com.formatCheckbox">是否启用</th>
                        <th field="remark" sortable="true" align="center" width="80" editor="text">备注</th>
                        <th field="create_time" sortable="true" align="center" width="110" editor="text" formatter="com.formatTime">添加日期</th>
                        <th field="create_username" sortable="true" align="center" width="80" editor="text">添加人</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

